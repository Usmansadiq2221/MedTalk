<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/myLightColor"
    android:foregroundGravity="center"
    tools:context=".Activities.CreatePatientProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginHorizontal="16dp"
            app:srcCompat="@drawable/patient_login_vector" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="48dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/submit_button"
            android:gravity="center"
            android:text="CREATE PROFILE"
            android:textColor="@color/editTextColor"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="24dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileimage"
                android:layout_width="109dp"
                android:layout_height="109dp"
                android:background="@drawable/image_back_file"
                app:shapeAppearanceOverlay="@style/Circular"
                android:padding="3dp"
                app:strokeColor="@color/editTextColor"
                app:strokeWidth="3dp"
                app:srcCompat="@drawable/enter_profile_icon"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/profilePicError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:text="Required!"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/create_edittext"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="Username?"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:scrollbars="horizontal"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/editTextColor"
                android:textCursorDrawable="@drawable/cursor_file"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/usernameError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:text="Required!"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/gender"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/create_edittext"
                android:paddingHorizontal="0dp"
                android:paddingLeft="4dp"
                android:scrollbars="horizontal"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/genderError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:text="Required!"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/create_edittext"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="email?"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:scrollbars="horizontal"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/editTextColor"
                android:textCursorDrawable="@drawable/cursor_file"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="12dp"
                android:alpha="0.6"
                android:background="@drawable/create_edittext"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="email?"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:scrollbars="horizontal"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/editTextColor"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/emailError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:text="Required!"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/phoneNo"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/create_edittext"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="Phone No?"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:scrollbars="horizontal"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/editTextColor"
                android:textCursorDrawable="@drawable/cursor_file"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/phoneNoText"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="12dp"
                android:alpha="0.6"
                android:background="@drawable/create_edittext"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="Phone No?"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:scrollbars="horizontal"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/editTextColor"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/phoneNoError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:text="Required!"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/province"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/create_edittext"
                android:paddingHorizontal="0dp"
                android:paddingLeft="4dp"
                android:scrollbars="horizontal"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/provinceError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:text="Required!"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/city"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/create_edittext"
                android:paddingHorizontal="0dp"
                android:paddingLeft="4dp"
                android:scrollbars="horizontal"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/cityError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:text="Required!"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/create_edittext"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="Address?"
                android:paddingHorizontal="4dp"
                android:scrollbars="horizontal"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/editTextColor"
                android:textCursorDrawable="@drawable/cursor_file"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/addressError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:text="Required!"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/submitProfile"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/submit_button"
                android:gravity="center|center_vertical"
                android:paddingHorizontal="4dp"
                android:text="Submit Profile"
                android:textColor="@color/editTextColor"
                android:textSize="14sp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp"
            android:gravity="center|center_vertical"
            android:indeterminateTint="@color/editTextColor"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>